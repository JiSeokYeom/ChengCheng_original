    <TextView
        android:id="@+id/eat_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="각 종류 별로 몇병을 마셨나요?"
        android:textColor="@color/main"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/add_item_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/eat_question">

        <TextView
            android:id="@+id/textview_soju"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="소주"
            android:textColor="@color/main"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eat_question" />

        <Spinner
            android:id="@+id/sojo_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/textview_sojo"
            app:layout_constraintTop_toBottomOf="@+id/eat_question" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_item_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/add_item_linear1">

        <TextView
            android:id="@+id/textview_beer"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="맥주"
            android:textColor="@color/main"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/beer_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="기억이 안나요.."
        android:textColor="@color/main"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_linear2" />

    <View
        android:id="@+id/solid_line"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_marginTop="5dp"
        android:background="@color/main"
        app:layout_constraintBottom_toTopOf="@+id/contents_input"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />
    <EditText
        android:id="@+id/contents_input"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/main"
        android:layout_marginTop="5dp"
        android:hint="간단하게 내용을 적어주세요(40자이내)"
        android:importantForAutofill="no"
        android:inputType="none"
        android:maxLength="40"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />
